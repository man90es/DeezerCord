{
	"manifest_version": 2,
	"name": "DeezerCord",
	"description": "Discord Rich Presence integration for Deezer",
	"version": "0.1.0",
	"content_scripts": [
		{
			"matches": ["*://www.deezer.com/*"],
			"js": ["deezerTracker.js"]
		},
		{
			"matches": ["*://discord.com/*"],
			"js": ["discordTracker.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"storage",
		"*://www.deezer.com/*",
		"*://discord.com/*"
	],
	"icons": {
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	}
}
